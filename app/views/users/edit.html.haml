  }
  function deleteFund(id, element){
      notes = document.getElementById("delete_fund_form").children
      for (var i = 0; i < notes.length; i++) {
          if (notes[i].getAttribute('name') == 'fund_id') {
              notes[i].value = id;
          }
      }
      element.hidden = true;
      document.getElementById("delete_this_fund").click();
  }