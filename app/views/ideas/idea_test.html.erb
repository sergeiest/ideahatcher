<%= render "startups/nav" %>

<div class="hatcher-container">
  <div class="company-main">
    <div class="company-left">

      <div class="company-box">
        <% if @startup.avatar? %>
            <%= image_tag @startup.avatar.url(:large), :class => "main-logo"%>
        <% else %>
            <img src='/images/profile/Nologo.png' class = "main-logo">
        <% end %>
        <h2 class="main-name"
            style = "background: linear-gradient(to top right, rgba(<%=100 +rand(155)%>,<%=100 +rand(155)%>,<%=100 +rand(155)%>, 1),  rgba(255, 255, 255, 1));">
          <%= @startup.name %>
          <% if session[:connection_type]==2 %>
              <%= link_to(:controller => "campaigns", :action => "basic_step" ) do %>
                  <button class="btn btn-small btn-primary">Update Info</button>
              <% end %>
          <% end %>
        </h2>
        <div style="clear:both"></div>
      </div>

      <div class="company-content">
        <button onclick=showLoginForm()>Login</button>


        <% idea = @ideas[0] %>
        <% if idea %>
            <div id="idea_<%= idea.id %>" class="company-box">
              <% if idea.title == nil || idea.title == "" %>
                  <h5>
                    <span id="name_idea_<%= idea.id %>" style="color:orange">Open discussion</span>
                    <% topic = "Open discussion" %>
                  </h5>
              <% else %>
                  <h5>
                    <span id="name_idea_<%= idea.id %>" style="color:orange"><%= idea.title %></span>
                    <% topic = idea.title %>
                  </h5>
              <% end %>

              <hr/>

              <div class="idea-test">
                <div class="left-side">
                  <div class="idea-statement">
                    We offer a fun way for employees to stay on task at work. Using gamification best practices,
                    we reward players for staying on task and taking appropriate breaks.
                  </div>
                  <input class="btn btn-mini" id="like_new" type="submit" value="I like this more" onclick="changeButton(0)"/>
                </div>

                <div class="my_corner">
                </div>
                <script>
                    $('.my_corner').prepend('<div class="tr"></div>')
                            .prepend('<div class="tl"></div>')
                            .prepend('<div class="br"></div>')
                            .prepend('<div class="bl"></div>');
                </script>

                <div class="idea-statement">
                  <div class="idea-statement">
                    <div class="idea-statement">
                      We offer a fun way for employees to stay on task at work. Using gamification best practices,
                      we reward players for staying on task and taking appropriate breaks.
                    </div>
                  </div>
                </div>

                <input class="btn btn-mini" id="like_old" type="submit" value="I like this more" onclick="changeButton(1)" />


                <hr/>
                <script>
                    function changeButton(isNew){
                        if (isNew == 0){
                            document.getElementById('like_old').disabled = false;
                            document.getElementById('like_new').disabled = true;
                            document.getElementById('like_old').className = "btn btn-mini";
                            document.getElementById('like_new').className = "btn btn-mini btn-primary";
                        } else {
                            document.getElementById('like_new').disabled = false;
                            document.getElementById('like_old').disabled = true;
                            document.getElementById('like_new').className = "btn btn-mini";
                            document.getElementById('like_old').className = "btn btn-mini btn-primary";
                        }
                    }
                </script>

              </div>

              <% for idea in @ideas %>

                  <%= simple_format h idea.content %>
                  <div class="author">
                    <p><%= idea.first_name %> <%= idea.last_name %> on <%= idea.created_at.strftime('%m/%d/%Y') %></p>
                  </div>
                  <div style="clear:both"></div>
                  <hr/>
              <% end %>
              <div id="following_Idea<%= @ideas[0].idea_id %>"></div>
              <% if @reader_type == 0 %>
                  <%=  link_to "Login to add a comment", :controller => "authentications", :action => "checklogin", :gotocontroller => "ideas", :gotoaction =>"index" %>
              <% else %>
                  <a id="text_idea" onclick="addForm()">Click to add a comment</a>
              <% end %>

              <div id="add_idea_form" hidden>
                <%= form_for @idea, :remote => true do |f| %>
                    <%= f.hidden_field :title, :value => @ideas[0].title %>
                    <%= f.hidden_field :is_protected, :value => 0 %>
                    <%= f.hidden_field :idea_id, :value => @ideas[0].idea_id %>
                    <%= f.hidden_field :startup_id, :value => @startup.id %>
                    <%= f.text_area :content%>
                    <button class="btn btn-warning">Save <span style="padding-left:20px"> > </span></button>
                <% end %>
              </div>

            </div>
        <% end %>
      </div>

    </div>
    <div class="company-right">
      <%= link_to 'Follow',
                  {:controller => 'authentications', :action => 'checklogin',
                   :gotocontroller => 'investors', :gotoaction => 'followcompany'},
                  :class => 'btn btn-warning' %>
      <div class="company-info">
        <h4>Team</h4>
        <%= render :partial => 'investors/person', :collection => @startup_owners, :locals => {:status => 1} %>
        <% if session[:connection_type]==2 %>
            <%= link_to 'Add more people >', {:controller => "startups", :action => "team", :id => params[:id]},
                        :class => "bottom-link" %>
        <% end %>
      </div>
      <div class="company-info">
        <h4>Followers</h4>
        <%= render :partial => 'investors/person', :collection => @startup_followers[0..7], :locals => {:status => 0} %>
        <%= link_to 'See all followers >', {:controller => "investors", :action => "people"}, :class => "bottom-link" %>
      </div>
    </div>
    <div class="clear-both"></div>
  </div>
</div>



<script  type="text/javascript">
    function addForm() {
        document.getElementById("add_idea_form").hidden = false;
        document.getElementById("text_idea").hidden = true;
    }
</script>


