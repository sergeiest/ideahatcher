var ideaDiv = document.getElementById('following_Idea<%= params[:id]%>');

<% @ideas.each do |idea| %>
    <% idea.content.gsub(/\r\n?/, '\n').split("\n").each do |text_string| %>
        var newP = document.createElement("p");
        newP.innerText = '<%= text_string.html_safe() %>';
        ideaDiv.appendChild(newP);
    <% end %>
    var newAuthor = document.createElement("p");

    newAuthor.className = "author";
    newAuthor.innerHTML = "<%= idea.first_name %> <%= idea.last_name %> on " +
                        "<%= idea.created_at.strftime('%m/%d/%Y') %>";
    ideaDiv.appendChild(newAuthor);

    ideaDiv.appendChild(document.createElement("hr"));
<% end %>


<% if params[:action] == 'show_idea'%>
    document.getElementById('show_link_Idea<%= params[:id]%>').hidden = true;
    showHiddenIdeas('Idea<%= params[:id] %>');
<% else %>
    document.getElementById('show_link_Idea<%= params[:id]%>').hidden = true;
    document.getElementById('Idea<%= params[:id] %>_1').hidden = true;
    showHiddenIdeas('Idea<%= params[:id] %>');
    showHiddenForm('Idea<%= params[:id] %>_comment');
<% end %>

