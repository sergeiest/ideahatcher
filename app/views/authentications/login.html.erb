<div id="notice" style="font-size:16px">
  Please login to proceed
</div>
<%if flash[:error] %>
  <p style="color:red"><%= flash[:error]%></p>
  <% flash[:error] =nil %>
<%end%>

<%= form_tag params.merge(:action => 'process_login') do %>
	<p>Email:<br />
	<%= text_field "authentication", "username" %></p>
	<p>Password:<br />
	<%= password_field "authentication", "password" %></p>
    <p><%= link_to "Forgot password", :action => "forgot_password" %></p>
	<%= submit_tag 'Login', class: "btn btn-primary"%>
	<!--<a href = "javascript:history.back()">Go back</a>-->
<% end %> 